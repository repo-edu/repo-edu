{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CanvasConfig",
  "type": "object",
  "properties": {
    "access_token": {
      "type": "string"
    },
    "base_url": {
      "type": "string"
    },
    "courses": {
      "type": "array",
      "items": {
        "$ref": "./CourseEntry.schema.json"
      }
    },
    "custom_url": {
      "type": "string"
    },
    "url_option": {
      "$ref": "./LmsUrlOption.schema.json"
    }
  },
  "additionalProperties": false,
  "required": [
    "access_token",
    "base_url",
    "courses",
    "custom_url",
    "url_option"
  ],
  "description": "Canvas-specific LMS configuration"
}
