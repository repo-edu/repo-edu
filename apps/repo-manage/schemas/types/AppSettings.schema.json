{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AppSettings",
  "type": "object",
  "properties": {
    "active_tab": {
      "$ref": "./ActiveTab.schema.json"
    },
    "collapsed_sections": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "x-rust": {
        "serde": {
          "default": true
        }
      },
      "description": "IDs of collapsed sections (e.g., [\"lms-config\", \"options\"])"
    },
    "logging": {
      "$ref": "./LogSettings.schema.json"
    },
    "sidebar_open": {
      "type": "boolean"
    },
    "theme": {
      "$ref": "./Theme.schema.json"
    },
    "window_height": {
      "type": "integer",
      "minimum": 0,
      "x-rust": {
        "type": "u32"
      }
    },
    "window_width": {
      "type": "integer",
      "minimum": 0,
      "x-rust": {
        "type": "u32"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "active_tab",
    "logging",
    "sidebar_open",
    "theme",
    "window_height",
    "window_width"
  ],
  "description": "App-level settings stored in app.json\nThese are UI/window settings that don't belong in profiles"
}
