{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AppSettings",
  "type": "object",
  "properties": {
    "theme": {
      "$ref": "./Theme.schema.json"
    },
    "date_format": {
      "$ref": "./DateFormat.schema.json"
    },
    "time_format": {
      "$ref": "./TimeFormat.schema.json"
    },
    "logging": {
      "$ref": "./LogSettings.schema.json"
    },
    "lms_connection": {
      "anyOf": [
        {
          "$ref": "./LmsConnection.schema.json"
        },
        {
          "type": "null"
        }
      ]
    },
    "git_connections": {
      "type": "object",
      "additionalProperties": {
        "$ref": "./GitConnection.schema.json"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "theme",
    "date_format",
    "time_format",
    "logging",
    "git_connections"
  ],
  "description": "App-level settings stored in app.json"
}
