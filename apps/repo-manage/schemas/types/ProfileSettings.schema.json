{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ProfileSettings",
  "type": "object",
  "properties": {
    "course": {
      "$ref": "./CourseInfo.schema.json"
    },
    "course_verified_at": {
      "anyOf": [{ "type": "string", "format": "date-time" }, { "type": "null" }],
      "description": "ISO timestamp when course was last verified against LMS"
    },
    "git_connection": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "operations": {
      "$ref": "./OperationConfigs.schema.json"
    },
    "exports": {
      "$ref": "./ExportSettings.schema.json"
    }
  },
  "additionalProperties": false,
  "required": [
    "course",
    "operations",
    "exports"
  ],
  "description": "Profile settings (per-profile data)"
}
