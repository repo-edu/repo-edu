{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "GiteaConfig",
  "type": "object",
  "properties": {
    "access_token": {
      "type": "string"
    },
    "base_url": {
      "type": "string"
    },
    "user": {
      "type": "string"
    },
    "student_repos_group": {
      "type": "string"
    },
    "template_group": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
    "access_token",
    "base_url",
    "user",
    "student_repos_group",
    "template_group"
  ],
  "description": "Gitea-specific configuration (requires base_url)"
}
