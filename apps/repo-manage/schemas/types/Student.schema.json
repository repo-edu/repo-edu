{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Student",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "./StudentId.schema.json"
    },
    "name": {
      "type": "string"
    },
    "email": {
      "type": "string"
    },
    "student_number": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "git_username": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "git_username_status": {
      "$ref": "./GitUsernameStatus.schema.json"
    },
    "lms_user_id": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "custom_fields": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "name",
    "email",
    "git_username_status",
    "custom_fields"
  ],
  "description": "Student roster entry"
}
