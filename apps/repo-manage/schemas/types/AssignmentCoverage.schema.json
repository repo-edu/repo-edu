{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AssignmentCoverage",
  "type": "object",
  "properties": {
    "assignment_id": {
      "$ref": "./AssignmentId.schema.json"
    },
    "assignment_name": {
      "type": "string"
    },
    "student_count": {
      "type": "integer",
      "minimum": 0
    },
    "missing_students": {
      "type": "array",
      "items": {
        "$ref": "./StudentSummary.schema.json"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "assignment_id",
    "assignment_name",
    "student_count",
    "missing_students"
  ],
  "description": "Coverage summary for an assignment"
}
