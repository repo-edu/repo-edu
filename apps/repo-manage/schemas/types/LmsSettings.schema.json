{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LmsSettings",
  "type": "object",
  "properties": {
    "canvas": {
      "$ref": "./CanvasConfig.schema.json"
    },
    "moodle": {
      "$ref": "./MoodleConfig.schema.json"
    },
    "type": {
      "type": "string"
    },
    "active_course_index": {
      "type": "integer",
      "minimum": 0,
      "x-rust": {
        "type": "u32",
        "serde": {
          "default": true
        }
      },
      "description": "Index of the active course in the courses array"
    },
    "csv_file": {
      "type": "string"
    },
    "full_groups": {
      "type": "boolean"
    },
    "include_group": {
      "type": "boolean"
    },
    "include_initials": {
      "type": "boolean"
    },
    "include_member": {
      "type": "boolean"
    },
    "member_option": {
      "$ref": "./MemberOption.schema.json"
    },
    "output_csv": {
      "type": "boolean"
    },
    "output_folder": {
      "type": "string"
    },
    "output_xlsx": {
      "type": "boolean"
    },
    "output_yaml": {
      "type": "boolean"
    },
    "xlsx_file": {
      "type": "string"
    },
    "yaml_file": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
    "canvas",
    "moodle",
    "type",
    "csv_file",
    "full_groups",
    "include_group",
    "include_initials",
    "include_member",
    "member_option",
    "output_csv",
    "output_folder",
    "output_xlsx",
    "output_yaml",
    "xlsx_file",
    "yaml_file"
  ],
  "description": "LMS app settings (Tab 1)"
}
