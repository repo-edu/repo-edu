{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "GitSettings",
  "type": "object",
  "properties": {
    "gitea": {
      "$ref": "./GiteaConfig.schema.json"
    },
    "github": {
      "$ref": "./GitHubConfig.schema.json"
    },
    "gitlab": {
      "$ref": "./GitLabConfig.schema.json"
    },
    "type": {
      "$ref": "./GitServerType.schema.json",
      "x-rust": {
        "field": "server_type",
        "serde": {
          "rename": "type"
        }
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "gitea",
    "github",
    "gitlab",
    "type"
  ],
  "description": "Git server settings (shared across apps)"
}
