{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LmsConnection",
  "type": "object",
  "properties": {
    "lms_type": {
      "$ref": "./LmsType.schema.json"
    },
    "base_url": {
      "type": "string"
    },
    "access_token": {
      "type": "string"
    },
    "user_agent": {
      "type": "string",
      "description": "User-Agent header for API requests. Identifies you to LMS administrators. Recommended format: 'Organization / contact@email.edu'"
    }
  },
  "additionalProperties": false,
  "required": [
    "lms_type",
    "base_url",
    "access_token"
  ],
  "description": "LMS connection credentials"
}
