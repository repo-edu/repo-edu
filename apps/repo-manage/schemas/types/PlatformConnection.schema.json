{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PlatformConnection",
  "type": "object",
  "properties": {
    "access_token": {
      "type": "string"
    },
    "base_url": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "user": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
    "access_token",
    "user"
  ],
  "description": "Platform connection credentials"
}
