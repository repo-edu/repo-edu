{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "GuiSettings",
  "type": "object",
  "properties": {
    "active_tab": {
      "$ref": "./ActiveTab.schema.json"
    },
    "collapsed_sections": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "x-rust": {
        "serde": {
          "default": true
        }
      },
      "description": "IDs of collapsed sections (e.g., [\"lms-config\", \"options\"])"
    },
    "logging": {
      "$ref": "./LogSettings.schema.json"
    },
    "sidebar_open": {
      "type": "boolean"
    },
    "theme": {
      "$ref": "./Theme.schema.json"
    },
    "window_height": {
      "type": "integer",
      "minimum": 0,
      "x-rust": {
        "type": "u32"
      }
    },
    "window_width": {
      "type": "integer",
      "minimum": 0,
      "x-rust": {
        "type": "u32"
      }
    },
    "git": {
      "$ref": "./GitSettings.schema.json"
    },
    "lms": {
      "$ref": "./LmsSettings.schema.json"
    },
    "repo": {
      "$ref": "./RepoSettings.schema.json"
    }
  },
  "additionalProperties": false,
  "required": [
    "active_tab",
    "logging",
    "sidebar_open",
    "theme",
    "window_height",
    "window_width",
    "git",
    "lms",
    "repo"
  ],
  "description": "Combined GUI settings (sent to frontend)\nThis combines app settings with the active profile's settings"
}
