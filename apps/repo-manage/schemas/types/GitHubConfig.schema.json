{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "GitHubConfig",
  "type": "object",
  "properties": {
    "access_token": {
      "type": "string"
    },
    "user": {
      "type": "string"
    },
    "student_repos_org": {
      "type": "string"
    },
    "template_org": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
    "access_token",
    "user",
    "student_repos_org",
    "template_org"
  ],
  "description": "GitHub-specific configuration (no base_url - always github.com)"
}
