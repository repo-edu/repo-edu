{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CoverageReport",
  "type": "object",
  "properties": {
    "total_students": {
      "type": "integer",
      "minimum": 0
    },
    "assignments": {
      "type": "array",
      "items": {
        "$ref": "./AssignmentCoverage.schema.json"
      }
    },
    "students_in_multiple": {
      "type": "array",
      "items": {
        "$ref": "./StudentMultipleAssignments.schema.json"
      }
    },
    "students_in_none": {
      "type": "array",
      "items": {
        "$ref": "./StudentSummary.schema.json"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "total_students",
    "assignments",
    "students_in_multiple",
    "students_in_none"
  ],
  "description": "Coverage report of students across assignments"
}
