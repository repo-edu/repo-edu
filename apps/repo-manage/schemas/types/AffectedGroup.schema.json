{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "AffectedGroup.schema.json",
  "title": "AffectedGroup",
  "type": "object",
  "properties": {
    "assignment_id": {
      "$ref": "./AssignmentId.schema.json"
    },
    "assignment_name": {
      "type": "string"
    },
    "group_id": {
      "type": "string",
      "format": "uuid"
    },
    "group_name": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": ["assignment_id", "assignment_name", "group_id", "group_name"],
  "description": "Group that references a student"
}
