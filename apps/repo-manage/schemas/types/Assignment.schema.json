{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Assignment",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "./AssignmentId.schema.json"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "assignment_type": {
      "$ref": "./AssignmentType.schema.json"
    },
    "groups": {
      "type": "array",
      "items": {
        "$ref": "./Group.schema.json"
      }
    },
    "group_set_cache_id": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "source_fetched_at": {
      "anyOf": [
        {
          "type": "string",
          "format": "date-time"
        },
        {
          "type": "null"
        }
      ],
      "description": "ISO timestamp when assignment groups were last synced from LMS cache"
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "name",
    "assignment_type",
    "groups"
  ],
  "description": "Assignment grouping students into repos"
}
