{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "repo-manage://schemas/meta/index.schema.json",
  "type": "object",
  "required": ["$schema", "types"],
  "properties": {
    "$schema": {
      "const": "https://json-schema.org/draft/2020-12/schema"
    },
    "types": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "path"],
        "properties": {
          "name": { "type": "string" },
          "path": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
