{
    "name": "repo-edu-workspace",
    "private": true,
    "scripts": {
        "dev": "pnpm tauri:dev",
        "build": "pnpm tauri:build",
        "fmt:ts": "biome format --write",
        "check:ts": "biome check",
        "check:ts:fix": "biome check --write",
        "typecheck:ts": "pnpm --filter @repo-edu/ui --filter @repo-edu/repo-manage exec tsc --noEmit",
        "test:ts": "pnpm -r run test",
        "fmt:rs": "cargo fmt --all",
        "check:rs": "cargo clippy --workspace",
        "check:rs:fix": "cargo clippy --workspace --fix --allow-dirty",
        "typecheck:rs": "cargo check --workspace",
        "test:rs": "cargo test --workspace",
        "fmt:md": "rumdl fmt",
        "check:md": "rumdl check",
        "fmt": "pnpm fmt:ts && pnpm fmt:rs && pnpm fmt:md",
        "check": "pnpm check:ts && pnpm check:rs && pnpm check:md",
        "fix": "pnpm check:ts:fix && pnpm fmt:rs && pnpm check:rs:fix && pnpm fmt:md",
        "typecheck": "pnpm typecheck:ts && pnpm typecheck:rs",
        "test": "pnpm test:ts && pnpm test:rs",
        "validate": "pnpm check && pnpm typecheck && pnpm test",
        "cli:build": "pnpm --filter @repo-edu/repo-manage cli:build",
        "cli:build:release": "pnpm --filter @repo-edu/repo-manage cli:build:release",
        "tauri:dev": "pnpm --filter @repo-edu/repo-manage tauri:dev",
        "tauri:build": "pnpm --filter @repo-edu/repo-manage tauri:build",
        "tauri:build:release": "pnpm --filter @repo-edu/repo-manage tauri:build:release",
        "gen:bindings": "pnpm --filter @repo-edu/repo-manage gen:bindings",
        "fixture:constraints": "pnpx tsx scripts/create-fixture-constraints.ts",
        "fixture:create": "pnpm fixture:constraints && cd ../test-fixtures && claude /create-students-repo",
        "docs:dev": "pnpm --filter @repo-edu/docs dev",
        "docs:build": "pnpm --filter @repo-edu/docs build",
        "docs:preview": "pnpm --filter @repo-edu/docs build &&pnpm --filter @repo-edu/docs preview"
    }
}
