{
    "name": "repo-edu-workspace",
    "private": true,
    "scripts": {
        "fmt:ts": "biome format --write",
        "lint:ts": "biome check",
        "lint:ts:fix": "biome check --write",
        "typecheck:ts": "pnpm --filter @repo-edu/ui --filter @repo-edu/repo-manage --filter @repo-edu/app-core --filter @repo-edu/backend-interface --filter @repo-edu/backend-mock exec tsc --noEmit",
        "check:ts": "pnpm lint:ts && pnpm typecheck:ts",
        "test:ts": "pnpm -r run test",
        "fmt:rs": "cargo fmt --all",
        "lint:rs": "cargo clippy --workspace --all-targets --all-features",
        "lint:rs:fix": "cargo clippy --workspace --all-targets --all-features --fix --allow-dirty",
        "typecheck:rs": "cargo check --workspace --all-targets --all-features",
        "check:rs": "pnpm lint:rs && pnpm typecheck:rs",
        "test:rs": "cargo test --workspace",
        "fmt:md": "rumdl fmt",
        "fmt": "pnpm fmt:ts && pnpm fmt:rs && pnpm fmt:md",
        "lint:md": "rumdl check",
        "lint": "pnpm lint:ts && pnpm lint:rs && pnpm lint:md",
        "lint:fix": "pnpm lint:ts:fix && pnpm lint:rs:fix && pnpm fmt:md",
        "fix": "pnpm lint:fix",
        "typecheck": "pnpm typecheck:ts && pnpm typecheck:rs",
        "check:schemas": "pnpx tsx scripts/validate-schemas.ts && pnpx tsx scripts/check-schema-coverage.ts && pnpx tsx scripts/check-command-parity.ts",
        "check": "pnpm lint && pnpm typecheck && pnpm check:schemas",
        "test": "pnpm test:ts && pnpm test:rs",
        "validate": "pnpm check && pnpm test",
        "cli:build": "pnpm --filter @repo-edu/repo-manage cli:build",
        "cli:build:release": "pnpm --filter @repo-edu/repo-manage cli:build:release",
        "dev": "pnpm --filter @repo-edu/repo-manage tauri:dev",
        "build": "pnpm --filter @repo-edu/repo-manage tauri:build",
        "build:release": "pnpm --filter @repo-edu/repo-manage tauri:build:release",
        "gen:bindings": "pnpm --filter @repo-edu/repo-manage gen:bindings && pnpm fmt && pnpm lint:ts:fix",
        "fixture:constraints": "pnpx tsx scripts/create-fixture-constraints.ts",
        "fixture:create": "pnpm fixture:constraints && cd ../test-fixtures && claude /create-students-repo",
        "docs:dev": "pnpm --filter @repo-edu/docs dev",
        "docs:build": "pnpm --filter @repo-edu/docs build",
        "docs:preview": "pnpm --filter @repo-edu/docs build &&pnpm --filter @repo-edu/docs preview",
        "claude2assistants": "node scripts/claude2assistants.mjs"
    },
    "devDependencies": {
        "@types/node": "^22.0.0",
        "ajv": "catalog:",
        "globby": "^14.0.0",
        "json-schema-to-typescript": "catalog:"
    },
    "packageManager": "pnpm@10.27.0+sha512.72d699da16b1179c14ba9e64dc71c9a40988cbdc65c264cb0e489db7de917f20dcf4d64d8723625f2969ba52d4b7e2a1170682d9ac2a5dcaeaab732b7e16f04a"
}
