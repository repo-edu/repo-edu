{
  "name": "repo-edu-workspace",
  "private": true,
  "scripts": {
    "dev:repo-manage": "pnpm --filter @repo-edu/repo-manage dev",
    "build:repo-manage": "pnpm --filter @repo-edu/repo-manage build",
    "tauri:repo-manage": "pnpm --filter @repo-edu/repo-manage tauri",
    "docs:dev": "pnpm --filter @repo-edu/docs dev",
    "docs:build": "pnpm --filter @repo-edu/docs build",
    "docs:preview": "pnpm --filter @repo-edu/docs preview",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "lint:md": "markdownlint-cli2 'docs/**/*.md'",
    "lint:md:fix": "markdownlint-cli2 --fix 'docs/**/*.md'",
    "format": "biome format --write .",
    "typecheck": "pnpm --filter @repo-edu/ui --filter @repo-edu/repo-manage exec tsc --noEmit",
    "check": "pnpm lint && pnpm typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "markdownlint-cli2": "^0.20.0"
  }
}
