{
    "name": "repo-edu-workspace",
    "private": true,
    "scripts": {
        "fmt:ts": "biome format",
        "check:ts": "biome check",
        "check:ts:fix": "biome check --write",
        "typecheck:ts": "pnpm --filter @repo-edu/ui --filter @repo-edu/repo-manage exec tsc --noEmit",
        "test:ts": "pnpm -r run test",
        "fmt:rs": "cargo fmt --manifest-path apps/repo-manage/Cargo.toml --all",
        "check:rs": "cargo clippy --manifest-path apps/repo-manage/Cargo.toml",
        "check:rs:fix": "cargo clippy --manifest-path apps/repo-manage/Cargo.toml --fix --allow-dirty",
        "typecheck:rs": "cargo check --manifest-path apps/repo-manage/Cargo.toml",
        "test:rs": "cargo test --manifest-path apps/repo-manage/Cargo.toml",
        "fmt:md": "rumdl fmt",
        "check:md": "rumdl check",
        "fmt": "pnpm fmt:ts && pnpm fmt:rs && pnpm fmt:md",
        "check": "pnpm check:ts && pnpm check:rs && pnpm check:md",
        "fix": "pnpm check:ts:fix && pnpm fmt:rs && pnpm check:rs:fix && pnpm fmt:md",
        "typecheck": "pnpm typecheck:ts && pnpm typecheck:rs",
        "test": "pnpm test:ts && pnpm test:rs",
        "validate": "pnpm check && pnpm typecheck && pnpm test",
        "tauri:dev": "pnpm --filter @repo-edu/repo-manage tauri dev",
        "tauri:build": "pnpm --filter @repo-edu/repo-manage tauri build --debug --bundles app",
        "tauri:build:release": "pnpm --filter @repo-edu/repo-manage tauri build",
        "cli:build": "cargo build --manifest-path apps/repo-manage/Cargo.toml -p repo-manage-cli",
        "cli:build:release": "cargo build --manifest-path apps/repo-manage/Cargo.toml -p repo-manage-cli --release"
    }
}
